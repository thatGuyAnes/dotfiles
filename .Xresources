! Run `xrdb ~/.Xresources` to source config.

!#################
## Cursor Mouse ##
!#################

! URxvt*cursorColor: #48D06D
URxvt*cursorColor: #fabd2f
URxvt.mouseWheelScrollPage: false


!#################
## Fonts ##
!#################

! URxvt.font: xft:DejaVuSansMono Nerd Font Mono:size=13
! URxvt.boldFont: xft:DejaVuSansMono Nerd Font Mono:size=13

! URxvt.font: xft:InconsolataGo Nerd Font Mono:size=12
! URxvt.boldFont: xft:InconsolataGo Nerd Font Mono:size=12

! URxvt.font: xft:Inconsolata Nerd Font Mono:size=13
! URxvt.boldFont: xft:Inconsolata Nerd Font Mono:size=13

! URxvt.font: xft:UbuntuMono Nerd Font Mono:size=13
! URxvt.boldFont: xft:UbuntuMono Nerd Font Mono:size=13

! URxvt.font: xft:Monoid Nerd Font Mono:size=12
! URxvt.boldFont: xft:Monoid Nerd Font Mono:size=12

! URxvt.font: xft:Hack Nerd Font Mono:size=12
! URxvt.boldFont: xft:Hack Nerd Font Mono:size=12

URxvt.font: xft:SauceCodePro Nerd Font Mono:size=13
URxvt.boldFont: xft:SauceCodePro Nerd Font Mono:size=13

! URxvt.font: xft:MesloLGS Nerd Font Mono:size=12
! URxvt.boldFont: xft:MesloLGS Nerd Font Mono:size=12


!##############################################################################
## Typography ##
!##############################################################################

URxvt.letterSpace: 0
URxvt.lineSpace: 3
Xft.dpi: 96
Xft.antialias: true


!##############################################################################
## Copy-Paste ##
!##############################################################################

! Normal copy-paste keybindings  ( ctrl-shift c/v )
urxvt.iso14755:                   false
urxvt.keysym.Shift-Control-V:     eval:paste_clipboard
urxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard


!##############################################################################
## Extensions ##
!##############################################################################

URxvt.perl-ext-common: resize-font


!##############################################################################
## Window ##
!##############################################################################

URxvt.scrollBar: false
URxvt.saveLines: 10000
! URxvt.transparent: true
! URxvt.shading: 20
! remove border
URxvt.borderLess: false


