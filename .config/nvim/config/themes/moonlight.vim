let g:moonlight_italic_comments = v:true      " Make comments italic
let g:moonlight_italic_keywords = v:false     " Make keywords italic
let g:moonlight_italic_functions = v:false    " Make functions italic
let g:moonlight_italic_variables = v:true     " Make variables and identifiers italic
let g:moonlight_contrast = v:true             " Make sidebars and popup menus like nvim-tree and telescope have a different background
let g:moonlight_borders = v:true              " Enable the border between verticaly split windows visable
let g:moonlight_disable_background = v:false  " Disable the setting of background color so that NeoVim can use your terminal background
