! Run `xrdb ~/.Xresources` to source config.

!---------------------------------------------------------------- CURSOR / MOUSE

! URxvt*cursorColor: #48D06D
! URxvt*cursorColor: #fabd2f
! URxvt*cursorColor: #5eacd3
URxvt.mouseWheelScrollPage: false
Xcursor.theme: Breeze_Snow
Xcursor.size: 16

!------------------------------------------------------------------------- FONTS

! URxvt.font: xft:DejaVuSans Mono:size=13
! URxvt.boldFont: xft:DejaVuSans Mono:size=13

! URxvt.font: xft:InconsolataGo Nerd Font Mono:size=14
! URxvt.boldFont: xft:InconsolataGo Nerd Font Mono:size=14

! URxvt.font: xft:Inconsolata Nerd Font Mono:size=15
! URxvt.boldFont: xft:Inconsolata Nerd Font Mono:size=15

URxvt.font: xft:UbuntuMono Nerd Font Mono:size=15
URxvt.boldFont: xft:UbuntuMono Nerd Font Mono:size=15

! URxvt.font: xft:Monoid Nerd Font Mono:size=12
! URxvt.boldFont: xft:Monoid Nerd Font Mono:size=12

! URxvt.font: xft:Hack Nerd Font Mono:size=12
! URxvt.boldFont: xft:Hack Nerd Font Mono:size=12

! URxvt.font: xft:SauceCodePro Nerd Font Mono:size=14
! URxvt.boldFont: xft:SauceCodePro Nerd Font Mono:size=14

! URxvt.font: xft:MesloLGS Nerd Font Mono:size=12
! URxvt.boldFont: xft:MesloLGS Nerd Font Mono:size=12

!--------------------------------------------------------------- X_FONT_SETTINGS

URxvt.letterSpace: 0
URxvt.lineSpace: 6

Xft.dpi: 90
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

!---------------------------------------------------------------------Copy-Paste

! Normal copy-paste keybindings  ( ctrl-shift c/v )
URxvt.keysym.Shift-Control-V:     eval:paste_clipboard
URxvt.keysym.Shift-Control-C:     eval:selection_to_clipboard
URxvt.iso14755:                   false
URxvt.iso14755_52:                false

!---------------------------------------------------------------------EXTENSIONS

URxvt.perl-ext-common: resize-font,clipboard,matcher
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

!-------------------------------------------------------------------------WINDOW

urxvt*internalBorder: 2
URxvt.scrollBar: false
URxvt.saveLines: 10000
URxvt.borderLess: false

!------------------------------------------------------------------ TRANSPARENCY

! #### Fake transparency;
! URxvt.transparent: true
! URxvt.shading: 80

! #### Composite- real transparency;
urxvt*depth: 32
urxvt*background: [90]#1d2021

